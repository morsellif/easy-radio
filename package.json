{
	"name": "easy-radio",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/morsellif/easy-radio.git"
	},
	"version": "0.0.0",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"typecheck": "vue-tsc --noEmit",
		"prettier": "prettier --write \"./src/**/*.{ts,tsx,js,vue}\"",
		"prettier:check": "prettier --check \"./src/**/*.{ts,tsx,js,vue}\"",
		"lint": "eslint --ext .js,.vue,.ts,.tsx --ignore-path .gitignore --fix src",
		"prepare": "husky install"
	},
	"dependencies": {
		"@headlessui/vue": "^1.6.0",
		"hls.js": "^1.1.5",
		"vue": "^3.2.25",
		"vue-router": "4"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.2",
		"@vitejs/plugin-vue": "^2.3.1",
		"@vue/cli-plugin-eslint": "^5.0.4",
		"autoprefixer": "^10.4.5",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-vue": "^8.7.1",
		"husky": "^7.0.4",
		"lint-staged": "^12.4.1",
		"only-allow": "^1.1.0",
		"postcss": "^8.4.13",
		"prettier": "^2.6.2",
		"tailwindcss": "^3.0.24",
		"typescript": "^4.5.4",
		"vite": "^2.9.5",
		"vite-plugin-eslint": "^1.6.0",
		"vue-tsc": "^0.34.7"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,vue}": [
			"eslint --cache --fix",
			"prettier --write"
		]
	}
}
